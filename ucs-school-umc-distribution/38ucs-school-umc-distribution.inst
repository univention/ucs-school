VERSION=1

. /usr/share/univention-join/joinscripthelper.lib
. /usr/share/univention-lib/umc.sh
. /usr/share/ucs-school-lib/umc.sh

joinscript_init

umc_init

# operation sets for admins (they can delete and see any project) and teachers
# (the can delete and see only their own projects)
umc_operation_create "distribution-all" "Material distribution (admins)" "" "distribution/*"
umc_operation_create "distribution-teacher" "Material distribution (teachers)" "teacher" "distribution/*"

# create empty UMC access policies
ucs_school_policies_create

# default policies for all operations (for admins)
umc_policy_append "default-umc-all" "distribution-all"
# policy for school admins
umc_policy_append "ucsschool-umc-admins-default" "distribution-all"
# policy for teachers
umc_policy_append "ucsschool-umc-teachers-default" "distribution-teacher"

joinscript_save_current_version

exit 0


